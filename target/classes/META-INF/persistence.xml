<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

  <persistence-unit name="localPersistence" transaction-type="RESOURCE_LOCAL">
    <description>Spring Hibernate JPA Configuration Example</description>
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>com.sptest.server.dao.model.entities.PhoneEntity</class>
    <class>com.sptest.server.dao.model.entities.UserEntity</class>
    <class>com.sptest.server.dao.model.entities.ShopEntity</class>
    <class>com.sptest.server.dao.model.entities.EmployeeEntity</class>
    <class>com.sptest.server.dao.model.entities.RoleEntity</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jpa_test_db?useLegacyDatetimeCode=false&amp;serverTimezone=UTC&amp;useSSL=false"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="format_sql" value="false"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/jpa_test_db"/>
      <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/jpa_test_db"/>
      <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
      <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/jpa_test_db"/>
      <property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>
      <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/jpa_test_db"/>
      <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
    </properties>
  </persistence-unit>
</persistence>
